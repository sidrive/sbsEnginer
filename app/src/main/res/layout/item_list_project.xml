<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_margin="@dimen/activity_horizontal_margin"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
    android:background="@drawable/bg_smom">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/colorRedPastel"
        android:id="@+id/tv01"
      android:gravity="center"
      android:text="@string/no_proses"
      android:drawableStart="@drawable/ic_chevron_left"
      android:drawableEnd="@drawable/ic_chevron_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorRedPastel"
        android:id="@+id/tv02"
      android:gravity="center"
      android:text="@string/nama_customer"
      android:drawableStart="@drawable/ic_chevron_left"
      android:drawableEnd="@drawable/ic_chevron_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  </LinearLayout>
  <TextView
      android:id="@+id/tv03"
      android:textColor="@color/colorCoralBlue"

    android:text="@string/bottom_sheet_behavior"
    android:drawableStart="@drawable/ic_chevron_left"
    android:drawableEnd="@drawable/ic_chevron_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>