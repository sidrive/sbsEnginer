<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:background="@drawable/bg_smom">

    <TextView
        android:id="@+id/tvAlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:drawableStart="@drawable/ic_chevron_left"
        android:gravity="center"
        android:text="@string/act_saba"
        android:textColor="@color/colorCoralBlue" />

    <TextView
        android:id="@+id/tvNamaDocumet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_chevron_right"
        android:drawableStart="@drawable/ic_chevron_left"
        android:gravity="center"
        android:text="@string/nama_dokumen"
        android:textColor="@color/colorCoralBlue" />
  </LinearLayout>

</LinearLayout>