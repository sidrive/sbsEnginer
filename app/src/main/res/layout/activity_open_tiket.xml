<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margitn_5dp"
    tools:context="id.geekgarden.esi.listtiket.OpenTiketActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lytSpnSnAlat"
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnSnAlat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/lytSpnShi"
            android:visibility="gone"
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner

                android:id="@+id/spnShi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="@string/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:singleLine="false"
                android:lines="5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnKegiatan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnPriority"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnProjects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="@dimen/margitn_5dp"
            android:background="@drawable/rounded"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Spinner
                android:id="@+id/spnEngginer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btnOpenTiket"
            android:text="@string/open"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
