<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="id.geekgarden.esi.listtiket.activity.DetailOnProgresvisitPmOther">
  <LinearLayout
    android:layout_margin="@dimen/margitn_5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
      android:weightSum="2"
        android:layout_margin="@dimen/margitn_5dp"
        android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_margin="@dimen/margitn_5dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:text="@string/nama_analis"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:text="@string/no_hp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:text="@string/tipe_alat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:text="@string/urgency_level"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
          android:layout_margin="@dimen/margitn_5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:textStyle="bold"
          android:gravity="center"
          android:textSize="20sp"
          android:text="@string/no_proses"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:gravity="center"
          android:text="@string/sn_alat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:text="@string/kategori"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <TextView
          android:text="@string/status_alat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      </LinearLayout>
    </LinearLayout>
    <TextView
      android:layout_margin="@dimen/margitn_5dp"
      android:maxLines="5"
      android:text="@string/ipsum_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:background="@drawable/rounded"
        android:layout_marginTop="@dimen/margitn_5dp"
        android:layout_margin="@dimen/margitn_5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:background="@drawable/rounded"
        android:layout_marginTop="@dimen/margitn_5dp"
        android:layout_margin="@dimen/margitn_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <android.support.design.widget.TextInputEditText
          android:padding="@dimen/margitn_5dp"
          android:layout_margin="@dimen/margitn_5dp"
          android:id="@+id/textInputEditText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:inputType="textMultiLine"
          android:gravity="top|left"
          android:singleLine="false"
          android:lines="5"
         />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cbSparepart"
      android:text="@string/sparepart_usage_replace"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <LinearLayout
      android:weightSum="2"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <Button
          android:id="@+id/btnStart"
        android:text="@string/end"
        android:layout_margin="@dimen/margitn_5dp"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
  </LinearLayout>
</ScrollView>
