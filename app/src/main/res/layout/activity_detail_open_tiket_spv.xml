<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="id.geekgarden.esi.listtiket.activitymyticket.DetailOpenTiket">
  <LinearLayout
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/no_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvNoHp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat" />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/tipe_alat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvTipeAlat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat" />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/urgency_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvUrgency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/urgency_level" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/description"/>

      <TextView
        android:id="@+id/tvDescTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"/>

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_5dp"
      android:background="@drawable/rounded">
      <Spinner
        android:id="@+id/spnAssignInto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_5dp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
      android:id="@+id/btnDiverted"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      android:text="Diverted"
      android:textColor="@android:color/white"/>
  </LinearLayout>
</LinearLayout>
