<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="@color/colorPrimaryGray"
    tools:context="id.geekgarden.esi.listtiket.activityticketstaff.DetailOnHold">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="@dimen/margin_5dp">

    <LinearLayout
        android:id="@+id/lyt_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/nama_analis"
              android:textColor="@color/colorRedPastel"/>

          <TextView
              android:id="@+id/tvnamaanalis"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorRedPastel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/no_hp"
              android:textColor="@color/colorRedPastel"/>

          <TextView
              android:id="@+id/tvnotelp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorRedPastel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/tvLabelalat"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/tipe_alat"
              android:textColor="@color/colorCoralBlue"/>

          <TextView
              android:id="@+id/tvtipealat"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorCoralBlue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/urgency_level"
              android:textColor="@color/colorRedPastel"/>

          <TextView
              android:id="@+id/tvurgency"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorRedPastel"/>
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_proses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorRedPastel"/>

        <TextView
            android:id="@+id/tvsnalat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sn_alat"
            android:textColor="@color/colorRedPastel"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/kategori"
              android:textColor="@color/colorCoralBlue"/>

          <TextView
              android:id="@+id/tvkategori"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorCoralBlue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/status_alat"
              android:textColor="@color/colorRedPastel"/>

          <TextView
              android:id="@+id/tvstatusalat"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="@color/colorRedPastel"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/lyt_02"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="95dp"
      android:layout_marginHorizontal="@dimen/margin_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/description"
          android:textColor="@color/colorCoralBlue" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_descrip_opentiket"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvDescTiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/colorCoralBlue" />
      </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:text="Resume Service Report"
        android:textSize="16sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvservicerpt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnStart1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCoralBlue"
        android:text="@string/continuee"
        android:textColor="#fff"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorCoralBlue"
        android:layout_marginVertical="@dimen/margin_5dp"
        android:gravity="center"
        android:id="@+id/btnStart">

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="24dp"
          android:layout_height="48dp"
          android:layout_gravity="bottom"
          android:layout_marginHorizontal="@dimen/margin_5dp"
          android:src="@drawable/ic_continue_icon"/>
      <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textColor="@color/colorWhite"
          android:fontFamily="@font/encodesans_extrabold"
          android:text="CONTINUE"/>

    </LinearLayout>

  </LinearLayout>

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_gravity="bottom"
      android:src="@drawable/bg_openticket"
      android:scaleType="centerCrop"/>

</android.support.design.widget.CoordinatorLayout>
