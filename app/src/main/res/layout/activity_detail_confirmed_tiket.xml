<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.geekgarden.esi.listtiket.activityticketstaff.DetailConfirmedTiket"
    android:weightSum="2"
    android:background="@color/colorPrimaryGray"
    android:orientation="vertical">

  <LinearLayout
      android:layout_margin="@dimen/activity_horizontal_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/no_hp"
          android:textColor="@color/colorRedPastel" />

      <TextView
          android:id="@+id/tvNoHp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat"
          android:textColor="@color/colorRedPastel" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_margin="2dp"
          android:text="@string/tipe_alat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/tvNameAlat"
          android:textColor="@color/colorCoralBlue" />

      <TextView
          android:id="@+id/tvTipeAlat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat"
          android:textColor="@color/colorCoralBlue" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_margin="2dp"
          android:text="@string/urgency_level"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorRedPastel" />

      <TextView
          android:id="@+id/tvUrgency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/urgency_level"
          android:textColor="@color/colorRedPastel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/description"
          android:textColor="@color/colorCoralBlue" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_descrip_opentiket"
          android:orientation="vertical">

        <TextView
            android:id="@+id/tvDescTiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@color/colorCoralBlue" />
      </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnStart1"
        android:layout_margin="@dimen/margin_5dp"
        android:text="@string/star"
        android:background="@color/colorCoralBlue"
        android:fontFamily="@font/encodesans_extrabold"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorCoralBlue"
        android:layout_marginVertical="@dimen/margin_5dp"
        android:gravity="center"
        android:id="@+id/btnStart">

      <ImageView
          android:id="@+id/imageView6"
          android:layout_width="24dp"
          android:layout_height="48dp"
          android:layout_gravity="bottom"
          android:layout_marginHorizontal="@dimen/margin_5dp"
          android:src="@drawable/ic_start_icon"/>
      <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:textColor="@color/colorWhite"
          android:fontFamily="@font/encodesans_extrabold"
          android:text="START"/>

    </LinearLayout>

  </LinearLayout>

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_gravity="bottom"
      android:src="@drawable/bg_openticket"
      android:scaleType="centerCrop"/>

</android.support.design.widget.CoordinatorLayout>
