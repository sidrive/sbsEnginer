<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="id.geekgarden.esi.listtiket.activity.DetailConfirmedTiket">
  <LinearLayout
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
      android:layout_margin="@dimen/margitn_5dp"
      android:text="@string/no_hp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_margin="@dimen/margitn_5dp"
      android:text="@string/tipe_alat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <TextView
      android:layout_margin="@dimen/margitn_5dp"
      android:text="@string/urgency_level"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <EditText
      android:padding="@dimen/margitn_5dp"
      android:hint="@string/ipsum_desc"
      android:layout_margin="@dimen/margitn_5dp"
      android:background="@drawable/rounded"
      android:layout_width="match_parent"
      android:maxLines="2"
      android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnStart"
      android:layout_margin="@dimen/margitn_5dp"
      android:text="@string/star"
      android:textColor="#fff"
      android:background="@color/colorPrimary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
