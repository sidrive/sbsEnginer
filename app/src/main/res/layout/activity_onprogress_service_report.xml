<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="@drawable/bg_detail_onprogress"
  tools:context="id.geekgarden.esi.listtiket.activityticketstaff.DetailOnProgressNew">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nama_analis"
                android:textColor="@color/colorRedPastel" />

            <TextView
                android:id="@+id/tvnamaanalis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorRedPastel" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no_hp"
                android:textColor="@color/colorCoralBlue" />

            <TextView
                android:id="@+id/tvnohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorCoralBlue" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLabelalat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tipe_alat"
                android:textColor="@color/colorCoralBlue" />

            <TextView
                android:id="@+id/tvtipealat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorCoralBlue" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/urgency_level"
                android:textColor="@color/colorRedPastel" />

            <TextView
                android:id="@+id/tvurgency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorRedPastel" />

          </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tvnumber"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/no_proses"
              android:textColor="@color/colorRedPastel"
              android:textSize="20sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvnamacustomer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/sn_alat"
              android:textColor="@color/colorRedPastel" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kategori"
                android:textColor="@color/colorCoralBlue" />

            <TextView
                android:id="@+id/tvcategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorCoralBlue" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/status_alat"
                android:textColor="@color/colorRedPastel" />

            <TextView
                android:id="@+id/tvstatusalat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorRedPastel" />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/description"
            android:textColor="@color/colorCoralBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_descrip_opentiket"
            android:orientation="vertical">

          <TextView
              android:id="@+id/tvDescTiket"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="2dp"
              android:padding="10dp" />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_5dp"
          android:orientation="horizontal"
          android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_weight="1"
            android:gravity="center">

          <Spinner
              android:id="@+id/spinnerdata"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:layout_gravity="center"
              android:layout_margin="@dimen/margin_5dp"
              android:background="@color/colorWhite"
              android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_weight="1"
            android:gravity="center">

          <TextView
              android:id="@+id/tvTravelTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/margin_5dp"
              android:text="@string/trive_time" />

          <EditText
              android:id="@+id/tvhours"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/colorWhite"
              android:ems="1"
              android:hint="Hours"
              android:inputType="time"
              android:singleLine="true"
              android:textAlignment="center" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              android:text=" : " />

          <EditText
              android:id="@+id/tvminute"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@color/colorWhite"
              android:ems="1"
              android:hint="Minute"
              android:inputType="time"
              android:textAlignment="center" />
        </LinearLayout>
      </LinearLayout>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/rcvreoccurence"
          android:layout_width="match_parent"
          android:layout_height="227dp"></android.support.v7.widget.RecyclerView>

      <TextView
          android:id="@+id/tvnodata"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="No Data Relation"
          android:textSize="50px"
          android:visibility="invisible" />

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_5dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tvproblem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_textare"
            android:hint="  Problem"
            android:lines="3" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tvfault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_textare"
            android:hint="  Fault description"
            android:lines="3" />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tvsolution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_textare"
            android:hint="  Action or Solution"
            android:lines="3" />
      </android.support.design.widget.TextInputLayout>

      <CheckBox
          android:id="@+id/ckbsparepart"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/sparepart_usage_replace" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

          <Button
              android:id="@+id/btncamera"
              android:layout_width="54dp"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/margin_5dp"
              android:layout_weight="1"
              android:background="@drawable/ic_menu_camera"
              android:backgroundTint="@color/colorPrimary"
              android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

          <ImageView
              android:id="@+id/imgcapture"
              android:layout_width="78dp"
              android:layout_height="58dp"
              android:layout_gravity="center_vertical"
              app:srcCompat="@android:drawable/screen_background_light_transparent" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="20dp"
          android:weightSum="2"
          android:layout_weight="1"
          android:orientation="horizontal">

        <Button
            android:id="@+id/bntHold1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_weight="1"
            android:background="@color/colorRedPastel"
            android:text="@string/hold"
            android:textColor="#fff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/bntHold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@color/colorCoralBlue"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView6"
              android:layout_width="24dp"
              android:layout_height="48dp"
              android:layout_gravity="bottom"
              android:layout_marginHorizontal="@dimen/margin_5dp"
              android:src="@drawable/ic_hold_icon_hand" />

          <TextView
              android:id="@+id/text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/encodesans_extrabold"
              android:gravity="center_horizontal"
              android:text="@string/hold"
              android:textColor="@color/colorWhite" />

        </LinearLayout>

        <Button
            android:id="@+id/btnEnd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_weight="1"
            android:background="@color/colorRedPastel"
            android:text="@string/end"
            android:textColor="#fff"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/btnEnd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/margin_5dp"
            android:background="@color/colorRedPastel"
            android:gravity="center"
            android:orientation="horizontal">

          <ImageView
              android:id="@+id/imageView7"
              android:layout_width="24dp"
              android:layout_height="48dp"
              android:layout_gravity="bottom"
              android:layout_marginHorizontal="@dimen/margin_5dp"
              android:src="@drawable/ic_end_icon_btn" />

          <TextView
              android:id="@+id/textend"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/encodesans_extrabold"
              android:gravity="center_horizontal"
              android:text="@string/end"
              android:textColor="@color/colorWhite" />

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

  </ScrollView>

</android.support.design.widget.CoordinatorLayout>
