<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:background="@color/colorWhite"
  android:layout_height="match_parent"
  tools:context="id.geekgarden.esi.listtiket.activityticketstaff.DetailOpenTiket">
  <LinearLayout
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/no_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvNoHp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat" />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/tipe_alat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvTipeAlat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/sn_alat" />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        android:layout_margin="2dp"
        android:text="@string/urgency_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
          android:id="@+id/tvUrgency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="2dp"
          android:text="@string/urgency_level" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/description"/>

      <TextView
        android:id="@+id/tvDescTiket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"/>

    </LinearLayout>


    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_textare"
        android:hint="Input Comment Here"
        android:padding="5dp" />
    <Button
      android:id="@+id/btnConfirm"
      android:text="Confirm"
      android:textColor="@android:color/white"
      android:background="@color/colorPrimary"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>
